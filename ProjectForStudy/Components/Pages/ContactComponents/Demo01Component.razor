@inject ContactService contactService

@if (contactService.ContactList.Count == 0)
{
    @NoContact
}
else if(contactService.ContactList is null)
{
    @NullContact
}
else
{
    foreach (var contacts in contactService.ContactList)
    {
        <b>@contacts.FirstName @contacts.LastName</b>
        <i>@contacts.Email</i>
        <i>@contacts.Phone</i>
        <br />
        <hr />
    }
}

@code {
    [Parameter]
    public RenderFragment NullContact { get; set; }
    [Parameter]
    public RenderFragment NoContact { get; set; }
    [Parameter]
    public List<ContactService> Contacts { get;set }
}
